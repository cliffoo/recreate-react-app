/* aka.ms/tsconfig */

{
  "include": ["./bin/", "./lib/"],
  "compilerOptions": {
    "target": "es5",
    "lib": [],
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "types": ["node"],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./dist/",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
